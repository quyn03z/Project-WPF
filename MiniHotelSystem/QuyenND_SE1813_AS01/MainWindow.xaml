<Window x:Class="QuyenND_SE1813_AS01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuyenND_SE1813_AS01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Button DockPanel.Dock="Top" Padding="30" Margin="10 10" x:Name="btnProfile" Click="btnProfile_Click">
                Profile Customer
            </Button>

            <Button DockPanel.Dock="Top" Padding="30" Margin="10 10" x:Name="btnHotel" Click="btnHotel_Click">
                Hotel Management
            </Button>

            <Button DockPanel.Dock="Top" Padding="30" Margin="10 10" x:Name="btnOrder" Click="btnOrder_Click">
                Order Management
            </Button>

            <Button Padding="40" Margin="10 10" x:Name="btnLogout" Click="btnLogout_Click">
                Logout
            </Button>
        </DockPanel>
    </Grid>
</Window>
